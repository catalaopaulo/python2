ler(x,y)

quociente = x // y 
resto = x % y 

escrever(f"O quociente da divisão é {quociente}")
escrever(f"O resto da divisão é {resto}")


#Ex5
escrever("Insira as três notas parcias obtidas: ")
ler(nota1,nota2,nota3)

media = (nota1 + nota2 + nota3) / 3

escrever(f"Obtida as notas parcias {nota1}, {nota2}, {nota3}, a sua média é {media}.")

se(media >= 10) entao
    escrever(f"Com a nota final de {media}, você está Aprovado!")

se(media < 8) entao
    escrever(f"Com a nota final {media}, você está Reprovado!")

senao
    escrever(f"Com a nota final {media}, você está Sujeito a recuperação!")


