#Ex7
escrever("Insira um número inteiro: ")
ler(num) 

enquanto (num < 2) faz
    escrever(f"O número que inseriu tem que ser maior que 1")
    escrever(f"Por favor, insira um número inteiro e maior que 1: ")
    ler(num)

totaldivisores = 0
X = 1
         
enquanto (x <= num) faz
    se (num % x == 0) entao
        totaldivisores = totaldivisores + 1

    x = x + 1

    se (totaldivisores == 2) entao
        escrever(f"O número {num} é primo")
    senao
        escrever(f"O número {num} não é primo")

         
#EX8
escrever("Insira um número inteiro e positivo: ")
ler(num)

enquanto (num < 1) faz
    escrever(f"O número que inseriu tem que ser inteiro e positivo")
    escrever(f"Por favor, insira um número inteiro e positivo: ")
    ler(num)

x = 2
         
enquanto (num >= 1) faz
    unidade = num % 10
    escrever(f"{unidade}")
    ler(unidade)
         
    se (unidade % x == 0) entao
        escrever(f"{unidade} - par")
    senao
        escrever(f"{unidade} - ímpar")
         
#resolução professor

escrever("Insira um número: ")
ler(num)

enquanto (num > 0) faz
    unidade = num % 10
    num = num // 10
         
    se (unidade % 2 == 0) entao
        escrever(f"{unidade} - par")
    senao
        escrever(f"{unidade} - ímpar")
